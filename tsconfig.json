{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6"],
    "rootDir": "src",
    "downlevelIteration": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"]
}
